<div>
	<h1>Sign Up</h1>
	<%= form_for @user do |f| %>
		<%= f.label :fname %>
		<%= f.text_field :fname%>
		<br>
		<br>
		<%= f.label :lname %>
		<%= f.text_field :lname%>
		<br>
		<br>
		<%= f.label :email %>
		<%= f.text_field :email%>
		<br>
		<br>
		<%= f.label :password %>
		<%= f.password_field :password%>
		<br>
		<br>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation%>
		<br>
		<br>
		<%= f.submit%>
	<% end %>
</div>
